<?xml version="1.0" encoding="UTF-8" ?>
<Context>
	<Resource
    name = "jdbc/MysqlDB"
 	type="javax.sql.DataSource" 
 	auth="Container"
 	maxActive="30" 
 	maxIdle="3"       
 	maxWait="3000"
 	username="root"
 	password="root" 
 	testOnBorrow="true"
 	driverClassName="com.mysql.cj.jdbc.Driver"
 	url="jdbc:mysql://localhost:3306/MysqlDB?serverTimezone=UTC">
</Resource>
</Context>